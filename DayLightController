using UnityEngine;
using System.Collections;
using System.Collections.Generic;

public class DayNightController : MonoBehaviour
{

    public Light sun;

    ///public GameObject[] lightCount;
    //public GameObject used to store all the Spotlights;
    public GameObject[] streetLightCount;

    public System.Collections.Generic.List<GameObject> StreetLightList = new System.Collections.Generic.List<GameObject>();


    public float secondsInFullDay = 120f;
    [Range(0, 1)]
    public float currentTimeOfDay = 0;
    [HideInInspector]
    public float timeMultiplier = 1f;
    public Gradient fogColors;
    float sunInitialIntensity;


    void Start()
    {
        sunInitialIntensity = sun.intensity;  
        
        
    }

    void Update()
    {   
        streetLightCount = GameObject.FindGameObjectsWithTag("StreetLight"); //use this tag with each of your StreetLights and make a spotlight its child.
        StreetLightList.AddRange(streetLightCount);
    

        UpdateSun();
        

        currentTimeOfDay += (Time.deltaTime / secondsInFullDay) * timeMultiplier;

        if (currentTimeOfDay >= 1)
        {
            currentTimeOfDay = 0;
            
        }

        RenderSettings.fogColor = fogColors.Evaluate(currentTimeOfDay);
    }

    void UpdateSun()
    {
        sun.transform.localRotation = Quaternion.Euler((currentTimeOfDay * 360f) - 90, 170, 0);

        float intensityMultiplier = 1;
        if (currentTimeOfDay <= 0.23f || currentTimeOfDay >= 0.75f)
        {
            intensityMultiplier = 0;

            foreach(GameObject i in StreetLightList)
            {   
                i.GetComponentInChildren<Light>().enabled = true;
            }
            
            
        }
        else if (currentTimeOfDay <= 0.25f)
        {
            intensityMultiplier = Mathf.Clamp01((currentTimeOfDay - 0.23f) * (1 / 0.02f));

            foreach(GameObject i in StreetLightList)
            {   
                if(currentTimeOfDay>0.23f )
                {
                    i.GetComponentInChildren<Light>().enabled = false;
                }
                
            }
        }
        else if (currentTimeOfDay >= 0.73f)
        {
            intensityMultiplier = Mathf.Clamp01(1 - ((currentTimeOfDay - 0.73f) * (1 / 0.02f)));
            
            foreach(GameObject i in StreetLightList)
            {   
                if(currentTimeOfDay<0.75f)
                {
                    i.GetComponentInChildren<Light>().enabled = false;
                }
            }
        }

        sun.intensity = sunInitialIntensity * intensityMultiplier;
    }

    
    
}
